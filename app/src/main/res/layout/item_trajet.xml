<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lieuDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Départ : Lomé"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lieuArrivee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrivée : Kara"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/heureDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure : 15:30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/prixParPassager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix : 1500 XOF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/placesDisponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places : 2"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>