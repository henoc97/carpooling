<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/passengerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom du passager"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/passengerPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Position du passager"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/messageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_bottom3"
                android:backgroundTint="@color/primary"
                android:contentDescription="Message"
                android:padding="8dp"
                android:src="@drawable/ic_send" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="65dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_bottom2"
                android:text="Annuler"
                android:onClick="annulerReservationk"/>

            <View
                android:layout_width="16dp"
                android:layout_weight="0"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_bottom3"
                android:backgroundTint="@color/primary_variant"
                android:text="Confirmer"
                android:onClick="confirmerReservation"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.google.android.material.card.MaterialCardView>